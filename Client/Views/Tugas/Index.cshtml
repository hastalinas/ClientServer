<h1>API Pokemon</h1>
<table class="table table-bordered border-info table-hover">
    <thead class="table-info">
        <tr>
            <th class="text-center">ID</th>
            <th class="text-center">Name</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody id="apiPok" class="text-center"></tbody>
</table>

<button onclick="toggleDarkMode()">  <span id="dark-mode-symbol">&#9728;</span></button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Data Pokemon</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="col-md-5 text-left">
                        <img src="" alt=""  id="img" style="max-width: 150px;">
                    </div>
                    <div class="col-md-7 text-left">
                        @*<p>type<span class="badge text-bg-primary" " id="type"></span></p>*@
                        <span id="type"></span></p>

                        <p class="mb-1">Name  : <span id="name"></span></p>
                        <p class="mb-1">Weight: <span id="weight"></span></p>
                        <p class="mb-1">Height: <span id="height"></span></p>
                        <p class="mb-1">Base Experience : <span id="experience-progress"></span></p>
                        <p class="mb-1">Abilities </p>
                        <ul id="abilities"></ul>

                    </div>
                </div>
                <hr />
@*                <p class="mb-1">Stat : </p>
                <ul id="statName"></ul>*@
                <p class="mb-1">Stats Name</p>
                <ul id="stats-list"></ul>
                <div class="progress mt-3" role="progressbar" aria-label="Animated striped example" aria-valuemin="0" aria-valuemax="100">
                    <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" id="stats-progress" style="width: 0%;">
                        <span class="progress-text">0%</span>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                @*<button type="button" class="btn btn-primary">Save changes</button>*@
            </div>
        </div>
    </div>
</div>

